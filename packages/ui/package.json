{
  "name": "@codejam/ui",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite build --watch & tsc --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint .",
    "test": "echo \"No tests configured\" && exit 0",
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist"
