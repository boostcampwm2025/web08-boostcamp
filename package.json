{
  "name": "codejam",
  "version": "1.0.0",
  "description": "Code Jam — 실시간 협업 코드 에디터",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:cli": "pnpm --filter @codejam/cli build",
    "check-types": "turbo run check-types",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "validate": "bash scripts/validate-summary.sh",
    "clean": "rm -rf node_modules **/*/node_modules"
  },
  "keywords": [
    "code-jam",
    "jamstack",
    "monorepo",
    "collaboration",
    "realtime-editor",
    "websocket",
    "codemirror"
  ],
  "author": "jam stack",
  "license": "ISC",
  "packageManager": "pnpm@10.26.0",
  "devDependencies": {
    "turbo": "^2.6.3"
  }
}
