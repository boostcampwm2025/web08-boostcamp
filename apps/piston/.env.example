# Piston Configuration
# See https://github.com/engineer-man/piston/blob/master/docs/configuration.md for detailed documentation

# ============================================================================
# Logging
# ============================================================================
# Level of log output (DEBUG, INFO, WARN, ERROR, NONE)
PISTON_LOG_LEVEL=INFO

# ============================================================================
# Security Settings
# ============================================================================
# Disable networking for executed code (recommended: true)
PISTON_DISABLE_NETWORKING=true

# ============================================================================
# Resource Limits
# ============================================================================
# Maximum number of concurrent jobs
PISTON_MAX_CONCURRENT_JOBS=64

# Maximum number of processes per job
PISTON_MAX_PROCESS_COUNT=64

# Maximum size of stdio buffers (bytes)
PISTON_OUTPUT_MAX_SIZE=1024

# Maximum number of open files per job
PISTON_MAX_OPEN_FILES=64

# Maximum size for a single file (bytes)
PISTON_MAX_FILE_SIZE=1048576

# ============================================================================
# Execution Timeouts (milliseconds)
# ============================================================================
# Compile stage timeout (wall-time)
PISTON_COMPILE_TIMEOUT=10000

# Run stage timeout (wall-time)
PISTON_RUN_TIMEOUT=5000

# Compile stage CPU-time
PISTON_COMPILE_CPU_TIME=10000

# Run stage CPU-time
PISTON_RUN_CPU_TIME=5000

# ============================================================================
# Memory Limits (bytes, -1 for unlimited)
# ============================================================================
PISTON_COMPILE_MEMORY_LIMIT=268435456
PISTON_RUN_MEMORY_LIMIT=134217728

# ============================================================================
# Port Configuration
# ============================================================================
# External port mapping (host:container)
# Note: Container always uses port 2000 internally
PISTON_PORT=2000
